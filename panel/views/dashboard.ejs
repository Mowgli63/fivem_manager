<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Panel Protection</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container py-4">
  <div class="d-flex align-items-center justify-content-between mb-4">
    <h2>Panel Protection</h2>
    <span class="badge bg-info">IP valides: <%= validCount %></span>
  </div>

  <form action="/add" method="POST" class="row g-2 mb-4">
    <div class="col-md-5">
      <input type="text" name="ip" class="form-control" placeholder="IP" required>
    </div>
    <div class="col-md-3">
      <input type="number" name="days" class="form-control" placeholder="Durée (jours)" value="30">
    </div>
    <div class="col-md-2">
      <button type="submit" class="btn btn-success w-100">Ajouter IP</button>
    </div>
    <div class="col-md-2">
      <form action="/clean" method="POST">
        <button formaction="/clean" formmethod="POST" class="btn btn-warning w-100">Nettoyer expirées</button>
      </form>
    </div>
  </form>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>IP</th>
        <th>Créée le</th>
        <th>Expiration</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% ips.forEach(ip => { %>
        <tr>
          <td><%= ip.ip %></td>
          <td><%= new Date(ip.created_at).toLocaleString() %></td>
          <td><%= ip.expires_at ? new Date(ip.expires_at).toLocaleString() : "Illimitée" %></td>
          <td>
            <form action="/remove" method="POST" class="d-inline">
              <input type="hidden" name="ip" value="<%= ip.ip %>">
              <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
